{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ClipMind",
  "version": "0.1.0",
  "identifier": "com.kvs62.clipmind-ui",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "ClipMind",
        "width": 820,
        "height": 560,
        "center": true,
        "visible": true,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "skipTaskbar": false,
        "focus": true
      },
      {
        "label": "quickboard",
        "title": "ClipMind Quickboard",
        "width": 900,
        "height": 580,
        "center": true,
        "visible": false,
        "resizable": true,
        "decorations": true,
        "alwaysOnTop": true,
        "transparent": true,
        "skipTaskbar": true,
        "focus": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}